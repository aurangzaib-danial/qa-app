<% title "Edit Your Answer" %>

<main class="container custom-container mt-3">
  <h5 class="fw-normal">Edit Your Answer</h5>

  <%= render "form", question: @question, answer: @answer, button_text: "Update" %>
  <%= button_to 'Delete', [@question, @answer], method: :delete, class: "btn btn-danger", form: { data: {turbo_confirm: "Are you sure you want to delete this answer?"}, class: "mt-3"} %>
</main>

