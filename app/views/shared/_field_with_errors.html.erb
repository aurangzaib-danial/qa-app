<%= form.send(field_type, attribute, {class: "form-control is-invalid", "aria-describedby": "#{attribute}ErrorFeedback", required: true}.merge(options)) %>

<%= content_tag :div, class: "invalid-feedback", id: "#{attribute}ErrorFeedback" do %>
  <%= form.object.errors.where(attribute).first.full_message %>
<% end %>
